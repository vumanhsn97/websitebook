      <div style="width:800px; height: 500px; margin-left: 60px; float:left; border:1px solid gray;">
        <div style="margin:auto; width:40%; margin-top:20%; font-size:50px;">Do something</div>
      </div>
    </div>
    <script>
      var i = 1;
      function funsach(){
        if(i == 1){
          document.getElementById('sach').style.display = "block";
          i = 0;
        }
        else {
          document.getElementById('sach').style.display = "none";
          i = 1;
        }

      }
      var j = 1;
      function funanhsach(){
        if(j == 1){
          document.getElementById('anhsach').style.display = "block";
          j = 0;
        }
        else {
          document.getElementById('anhsach').style.display = "none";
          j = 1;
        }

      }
    </script>
