
      <div style="width:800px; height: 500px; margin-left: 60px; float:left;">
        <form action="/suasach" method="post">
          <input type="text" name="timkiem"/>
          <input type="submit" value="Tìm kiếm"/>
        </form>
        <% book.forEach(function(i){ %>
          <div style="height:100px; border-bottom:1px solid black;">
            <div style="width:85%; float:left;">
              <div style="font-size: 18px;"><%= i.bookname %></div>
              <div style="font-size: 25px; color:red;">Giá: <%= i.bookprice %> VNĐ</div>
              <div>Tác giả: <%= i.author %></div>
            </div>
            <a href=suasach-<%= i._id %>><div style="width:100px; height:40px; margin-top: 30px; background-color:#00ff7f; float:left; border:1px solid black; border-radius:10px;">
              <div style="position:absolute; margin-left: 30px; font-size: 20px; color:#4c4c4c">Sửa</div>
            </div></a>
          </div>
        <% }) %>
        <% if(book.length == 0){ %>
          <p> Không tìm thấy </p>
        <% } %>
      </div>
    </div>
    <script>
      var i = 0;
      function funsach(){
        if(i == 1){
          document.getElementById('sach').style.display = "block";
          i = 0;
        }
        else {
          document.getElementById('sach').style.display = "none";
          i = 1;
        }

      }
      var j = 1;
      function funanhsach(){
        if(j == 1){
          document.getElementById('anhsach').style.display = "block";
          j = 0;
        }
        else {
          document.getElementById('anhsach').style.display = "none";
          j = 1;
        }

      }
    </script>
  </body>
</html>
