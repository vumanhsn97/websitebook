<body>
<!-- Top -->
<div id="top" >
  <div class="shell">
    <!-- Header -->
    <div id="header">
      <h1 id="logo"><a href="#">Urgan Gear</a></h1>
      <div id="navigation">
        <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">Support</a></li>
          <li><a href="#">My Account</a></li>
          <li><a href="#">The Store</a></li>
          <li class="last"><a href="#">Contact</a></li>
        </ul>
      </div>
    </div>
    <!-- End Header -->
    <!-- Slider -->
    <div id="slider" style="margin-bottom:10px; position:absolute;">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="css/images/slide1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide3.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide4.jpg" alt="Finally">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- End Slider -->
  </div>
</div>
<!-- Top -->
<!-- Main -->
<div id="main">
  <div class="shell">
    <!-- Search, etc -->
    <div class="options">
      <div class="search">
        <form action="#" method="post">
          <span class="field">
          <input type="text" class="blink" value="SEARCH" title="SEARCH" />
          </span>
          <input type="text" class="search-submit" value="GO" />
        </form>
      </div>
      <span class="left"><a href="#">Advanced Search</a></span>
      <div class="right"> <span class="cart"> <a href="#" class="cart-ico">&nbsp;</a> <strong>$0.00</strong> </span> <span class="left more-links"> <a href="#">Checkout</a> <a href="#">Details</a> </span> </div>
    </div>
    <!-- End Search, etc -->
    <!-- Content -->
    <div id="content">
      <!-- Tabs -->
      <div id="tabs">
        <ul>
          <li style="margin-left:0px;"><a href="trangchu">Trang chủ</a></li>
          <li><a href="page-1">Danh sách sản phẩm</a></li>
          <li><a href="">Thể loại</a>
            <ul class="typebook">
              <li><a href="theloai-truyenngan-1">Truyện ngắn</a></li>
              <li><a href="theloai-truyentranh-1">Truyện tranh</a></li>
              <li><a href="theloai-giaoduc-1">Giáo dục</a></li>
              <li><a href="theloai-kinangsong-1">Kĩ năng sống</a></li>
              <li><a href="theloai-kinhte-1">Kinh tế</a></li>
              <li><a href="theloai-tamly-1">Tâm lý</a></li>
              <li><a href="theloai-giaokhoa-1">Sách giáo khoa</a></li>
              <li><a href="theloai-vanhoc-1">Văn học</a></li>
              <li><a href="theloai-ngoaingu-1">Ngoại ngữ</a></li>
              <li><a href="theloai-cotich-1">Truyện cổ tích</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- Tabs -->

      <!-- Container -->
      <div id="container" style="margin-top:-15px;">
        <div class="tabbed">
          <!-- First Tab Content -->
          <div class="items">
            <div class="cl">&nbsp;</div>
            <ul>
              <% book.forEach(function(i){ %>
                <a href="chitiet-<%= i._id %>"><li>
                  <% var n=0; images.forEach(function(j){ %>
                    <% if(j.idbook == i._id && n==0){ %>
                      <div class="image"><img src="<%= j.imageurl %>" width="100%" height="100%" /></div>
                    <% n = 1; } %>
                  <% }) %>
                  <p style ="width: 200px; height: 50px;"> <span><%= i.bookname %></span><br />
                    <span>Thể loại: <%= i.booktype %></span><br /></p>
                  <p class="price"><strong>Giá: <%= i.bookprice %></strong></p>
                </li></a>
              <% }) %>
            </ul>
            <div class="cl">&nbsp;</div>
          </div>
          <!-- End First Tab Content -->
        </div>
        <!-- Brands
        <div class="brands">
          <h3>Brands</h3>
          <div class="logos"> <a href="#"><img src="css/images/logo1.gif" alt="" /></a> <a href="#"><img src="css/images/logo2.gif" alt="" /></a> <a href="#"><img src="css/images/logo3.gif" alt="" /></a> <a href="#"><img src="css/images/logo4.gif" alt="" /></a> <a href="#"><img src="css/images/logo5.gif" alt="" /></a> </div>
        </div>
         -->
        <!-- Footer -->
        <div style="margin:auto; width:15%; padding: 10px; font-size:15px;">
          <a href="<%= go %><%= page-1 %>"><div style="width:20px; height:20px; float:left; border:1px solid black; color:white; background-color:#00acbc; font-size:18px;">
            <p style="margin-left:3px; margin-top:-6px;"> < </p>
          </div></a>
          <input type="text" id="page" style="width:30px; height: 20px; float:left; text-align:center;" onchange="gopage()"/>
          <a id = 'go' href="<%= go %>"><div style="width:25px; height:20px; float:left; border:1px solid black; color:white; background-color:#00bc9a; font-size:15px;">
            <p style="margin-left:3px; margin-top:-2px;"> Go </p>
          </div></a>
          <a href="<%= go %><%= page+1 %>"><div style="width:20px; height:20px; float:left; border:1px solid black; color:white; background-color:#00acbc; font-size:18px;">
            <p style="margin-left:3px; margin-top:-6px;"> > </p>
          </div></a>
        </div>
        <div id="footer">
          <div class="left"> <a href="#">Home</a> <span>|</span> <a href="#">Support</a> <span>|</span> <a href="#">My Account</a> <span>|</span> <a href="#">The Store</a> <span>|</span> <a href="#">Contact</a> </div>
          <div class="right"> &copy; Nhom3catcon </div>
        </div>
        <!-- End Footer -->
      </div>
      <!-- End Container -->
    </div>
    <!-- End Content -->
  </div>
</div>
<script>
  var x = document.getElementById('go').href;
  document.getElementById('go').href=x + <%= page %>;
  document.getElementById('page').value = <%= page %>;
  function gopage(){
    document.getElementById('go').href= x + document.getElementById('page').value;
  }
</script>
<!-- End Main -->
</body>
</html>
