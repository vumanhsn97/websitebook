<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>Book Store</title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="css/style.css" type="text/css" media="all" />
<link rel="stylesheet" href="css/chitiet.css" type="text/css" media="all" />
<!--[if lte IE 6]><style type="text/css" media="screen">.tabbed { height:420px; }</style><![endif]-->
<script src="js/jquery-1.4.1.min.js" type="text/javascript"></script>
<script src="js/jquery.jcarousel.pack.js" type="text/javascript"></script>
<script src="js/jquery.slide.js" type="text/javascript"></script>
<script src="js/jquery-func.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
<!-- Top -->
<div id="top" >
  <div class="shell">
    <!-- Header -->
    <div id="header">
      <h1 id="logo"></h1>
      <div id="navigation">
        <ul>
          <% if(user){ %>
            <li><a href="account">Thông tin tài khoản</a></li>
            <li><a href="logout">Đăng xuất</a></li>
          <% } else {%>
            <li><a href="login">Đăng nhập</a></li>
            <li><a href="register">Đăng ký</a></li>
          <% } %>
          <li class="last"><a href="#">Liên hệ </a></li>
        </ul>
      </div>
    </div>
    <!-- End Header -->
    <!-- Slider -->
    <div id="slider" style="margin-bottom:10px; position:absolute;">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="css/images/slide1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide3.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide4.jpg" alt="Finally">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- End Slider -->
  </div>
</div>
<!-- Top -->
<!-- Main -->
<div id="main">
  <div class="shell">
    <!-- Search, etc -->
    <div class="options">
      <div class="search">
        <form action="search" method="post">
          <input type="text" name="key" placeholder="Tên sản phẩm" />
          <input type="text" name="price" value="Giá tối đa" />
          <select name="typebook" id="loai">
            <option value="Thể loại">Thể loại</option>
            <option value="Truyện ngắn">Truyện ngắn</option>
            <option value="Truyện tranh">Truyện tranh</option>
            <option value="Giáo dục">Giáo dục</option>
            <option value="Kĩ năng sống">Kĩ năng sống</option>
            <option value="Kinh tế">Kinh tế</option>
            <option value="Tâm lý">Tâm lý</option>
            <option value="Sách giáo khoa">Sách giáo khoa</option>
            <option value="Văn học">Văn học</option>
            <option value="Ngoại ngữ">Ngoại ngữ</option>
            <option value="Truyện cổ tích">Truyện cổ tích</option>
          </select>
          <select name="xapxep" id="xep">
            <option value="Xắp xếp">Xắp xếp</option>
            <option value="Lượt xem">Lượt xem</option>
            <option value="Ngày đăng">Ngày đăng</option>
          </select>
          <input type="submit" value="Tìm kiếm" />
        </form>
      </div>

      <div class="right"> <span class="cart"> <a href="cart" class="cart-ico">&nbsp;</a> <strong>Giỏ hàng</strong> </span></div>
    </div>
    <!-- End Search, etc -->
    <!-- Content -->
    <div id="content">
      <!-- Tabs -->
      <div id="tabs">
        <ul>
          <li style="margin-left:0px;"><a href="trangchu">Trang chủ</a></li>
          <li><a href="page-1">Danh sách sản phẩm</a></li>
          <li><a href="">Thể loại</a>
            <ul class="typebook">
              <li><a href="theloai-truyenngan-1">Truyện ngắn</a></li>
              <li><a href="theloai-truyentranh-1">Truyện tranh</a></li>
              <li><a href="theloai-giaoduc-1">Giáo dục</a></li>
              <li><a href="theloai-kinangsong-1">Kĩ năng sống</a></li>
              <li><a href="theloai-kinhte-1">Kinh tế</a></li>
              <li><a href="theloai-tamly-1">Tâm lý</a></li>
              <li><a href="theloai-giaokhoa-1">Sách giáo khoa</a></li>
              <li><a href="theloai-vanhoc-1">Văn học</a></li>
              <li><a href="theloai-ngoaingu-1">Ngoại ngữ</a></li>
              <li><a href="theloai-cotich-1">Truyện cổ tích</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- Tabs -->

      <!-- Container -->
      <div id="container" style="margin-top:-15px;">
        <div class="tabbed">
          <div style="width:400px; height:400px; float:left;">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
              <div class="carousel-inner">
                <% var n = 0; images.forEach(function(i){
                  if(n==0){ %>
                    <div class="carousel-item active">
                      <img class="d-block w-100" src="<%= i.imageurl %>"  width="400px;" height="400px;">
                    </div>
                  <% n=1; } else { %>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="<%= i.imageurl %>" width="400px;" height="400px;">
                    </div>
                    <% } %>
                  <% }) %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <div style="float:left; height:320px; margin-left:50px; margin-top: 50px;">
            <div style="font-size:25px; line-height: 1; width:400px; height:auto">Tên sách: <%= book.bookname %></div>
            <div id="author">Tác giả: <%= book.author  %></div>
            <div id="typebook">Thể loại: <%= book.booktype %></div>
            <div id="bookprice">Giá: <%= book.bookprice %> VNĐ</div>
            <div id="viewsbook">Lượt xem: <%= book.viewsbook %></div>
            <div style="width:120px; margin-top:10px; float:left;">
              <p>Số lượng: </p>
              <div style="float:left;"><input type="button" name="tru" id="tru" value="&nbsp&nbsp-&nbsp&nbsp" onclick="tru()"/></div>
              <div style="float:left;"><input align="center" type="text" name="soluong" id="soluong" value="1" size="1" style="text-align:center;" onchange="soluong()"/></div>
              <div style="float:left;"><input type="button" name="cong" id="cong" value="&nbsp&nbsp+&nbsp&nbsp" onclick="cong()"/></div>
            </div>
            <div class="addtocart">
              <a id="cart" href="cart-<%= book._id %>-1"><img src="css/images/addtocart.png" width="100%" height="100%"/></a>
            </div>
            <div class="smile">
              <img src="css/images/smile.jpg" width="100%" height="100%"/>
            </div>
          </div>
        </div>
        <div style="margin-top:10px; border-top:dashed 1px #cfcfcf;">
          <p style="font-size:30px; margin-top:10px;">Giới thiệu sách</p>
          <p style="font-size: 15px; line-height: 1.5; margin-top:20px;"><%= book.bookcontent %></p>
        </div>
        <div style="margin-top:10px; border-top:dashed 1px #cfcfcf;">
          <p style="font-size:30px; margin-top:10px;">Bình luận</p>
          <p> Thêm bình luận </p>
          <form action="comment-<%= book._id %>" method="post">
          <% if(user){ %>
            <p>Nội dung</p>
            <textarea cols="100" rows="2" name="content" maxlength="150"></textarea>
            <input type="submit" value="Gửi" />
          <%} else{ %>
            <table>
              <tr>
                <td> Tên </td>
                <td> Nội dung</td>
              </tr>
              <tr>
                <td><input type="text" name="username" maxlength="20" style="margin-right:10px; margin-top: -20px;"/></td>
                <td><textarea cols="100" rows="2" name="content" maxlength="150"></textarea></td>
              </tr>
              <tr>
                <td><input type="submit" value="Gửi" /></td>
                <td></td>
              </tr>
            </table>
          <%}%>
          </form>
          <% comment.forEach(function(i){ %>
            <p style="font-size: 15px; line-height: 1.5; margin-top:20px; background-color:#56ffff; border-radius:10px;"><%= i.name %> : <%= i.content %></p>
          <%})%>
          <nav aria-label="Page navigation example">
            <ul class="pagination">

              <% var x = 1; while(maxpage>0){ %>
                <li class="page-item"><a class="page-link" href="chitiet-<%= book._id %>-<%=x%>"><%= x %></a></li>
              <% x = x + 1; maxpage = maxpage - 1;} %>

            </ul>
          </nav>
        </div>
        <!-- Brands
        <div class="brands">
          <h3>Brands</h3>
          <div class="logos"> <a href="#"><img src="css/images/logo1.gif" alt="" /></a> <a href="#"><img src="css/images/logo2.gif" alt="" /></a> <a href="#"><img src="css/images/logo3.gif" alt="" /></a> <a href="#"><img src="css/images/logo4.gif" alt="" /></a> <a href="#"><img src="css/images/logo5.gif" alt="" /></a> </div>
        </div>
         -->
        <!-- Footer -->
        <div id="footer">
          <div class="right"> &copy; Nhom3catcon </div>
        </div>
        <!-- End Footer -->
      </div>
      <!-- End Container -->
    </div>
    <!-- End Content -->
  </div>
</div>
<script src="js/data.js" type="text/javascript"></script>
<script src="js/imagesdata.js" type="text/javascript"></script>
<script>
  function soluong(){
    if(isNaN(document.getElementById('soluong').value)||document.getElementById('soluong').value<1){
      document.getElementById('soluong').value = 1;
      document.getElementById('cart').href = "cart-<%= book._id %>-" + document.getElementById('soluong').value;
    }
  }
  function tru(){
    if(parseInt(document.getElementById('soluong').value)<=1) document.getElementById('soluong').value = 1;
    else {
      document.getElementById('soluong').value = parseInt(document.getElementById('soluong').value) - 1;
    }
    document.getElementById('cart').href = "cart-<%= book._id %>-" + document.getElementById('soluong').value;
  }
  function cong(){
    document.getElementById('soluong').value = parseInt(document.getElementById('soluong').value) + 1;
    document.getElementById('cart').href = "cart-<%= book._id %>-" + document.getElementById('soluong').value;
  }
</script>
<!-- End Main -->
</body>
</html>
