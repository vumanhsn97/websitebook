<body>
<!-- Top -->
<div id="top" >
  <div class="shell">
    <!-- Header -->
    <div id="header">
      <h1 id="logo"><a href="#">Urgan Gear</a></h1>
      <div id="navigation">
        <ul>
          <% if(user){ %>
            <li><a href="">Thông tin tài khoản</a></li>
            <li><a href="logout">Đăng xuất</a></li>
          <% } else {%>
            <li><a href="login">Đăng nhập</a></li>
            <li><a href="register">Đăng ký</a></li>
          <% } %>
          <li class="last"><a href="#">Liên hệ </a></li>
        </ul>
      </div>
    </div>
    <!-- End Header -->
    <!-- Slider -->
    <div id="slider" style="margin-bottom:10px; position:absolute;">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="css/images/slide1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide3.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="css/images/slide4.jpg" alt="Finally">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- End Slider -->
  </div>
</div>
<!-- Top -->
<!-- Main -->
<div id="main">
  <div class="shell">
    <!-- Search, etc -->
    <div class="options">
      <div class="search">
        <form action="search" method="post">
          <input type="text" value="Tên sản phẩm" />
          <input type="submit" value="Tìm kiếm" />
        </form>
      </div>

      <div class="right"> <span class="cart"> <a href="#" class="cart-ico">&nbsp;</a> <strong>$0.00</strong> </span> <span class="left more-links"> <a href="#">Checkout</a> <a href="#">Details</a> </span> </div>
    </div>
    <!-- End Search, etc -->
    <!-- Content -->
    <div id="content">
      <!-- Tabs -->
      <div id="tabs">
        <ul>
          <li style="margin-left:0px;"><a href="trangchu">Trang chủ</a></li>
          <li><a href="page-1">Danh sách sản phẩm</a></li>
          <li><a href="">Thể loại</a>
            <ul class="typebook">
              <li><a href="theloai-truyenngan-1">Truyện ngắn</a></li>
              <li><a href="theloai-truyentranh-1">Truyện tranh</a></li>
              <li><a href="theloai-giaoduc-1">Giáo dục</a></li>
              <li><a href="theloai-kinangsong-1">Kĩ năng sống</a></li>
              <li><a href="theloai-kinhte-1">Kinh tế</a></li>
              <li><a href="theloai-tamly-1">Tâm lý</a></li>
              <li><a href="theloai-giaokhoa-1">Sách giáo khoa</a></li>
              <li><a href="theloai-vanhoc-1">Văn học</a></li>
              <li><a href="theloai-ngoaingu-1">Ngoại ngữ</a></li>
              <li><a href="theloai-cotich-1">Truyện cổ tích</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- Tabs -->

      <!-- Container -->
      <div id="container" style="margin-top:-15px;">
        <div class="tabbed">
          <!-- First Tab Content -->
          <div class="items">
            <div class="cl">&nbsp;</div>
            <p style="font-size: 30px; margin: 0px 0px 40px 350px;"> Lịch sử giao dịch </p>
            <% var i = 0; while(sellbook[i]){ %>
              <div style="width:200px; height: 200px; float:right; border-bottom:1px solid black;">
                <p> Trạng thái: <%= sellbook[i].status %></p>
                <p> Ngày giao dịch: <%= sellbook[i].date %></p>
                <p> Địa chỉ nhận: <%= sellbook[i].address %></p>
              </div>
              <a href="chitiet-<%= i._id %>"><div style="width:700px; height:200px; border-bottom:1px solid black; float:left;">
                <% var n=0; images.forEach(function(j){ %>
                  <% if(j.idbook == sellbook[i].idbook && n==0){ %>
                    <div style="float:left; width:160px; height:190px; margin:5px 10px;"><img src="<%= j.imageurl %>" width="100%" height="100%" /></div>
                  <% n = 1; } %>
                <% }) %>
                <% var n=0; book.forEach(function(k){ %>
                  <% if(sellbook[i].idbook == k._id && n==0){ %>
                <div style ="width: 500px; height: 100%; float:left">
                  <span><%= k.bookname %></span><br />
                  <span>Thể loại: <%= k.booktype %></span><br />
                  <p class="price"><strong>Giá: <%= k.bookprice %> VND</strong></p>
                  <p>Số lượng: <%= sellbook[i].amount %></p>
                </div>
                <% n = 1; } %>
              <% }) %>
              </div></a>
            <% i = i + 1;} %>

            <div class="cl">&nbsp;</div>
          </div>
          <!-- End First Tab Content -->
        </div>
        <!-- Brands
        <div class="brands">
          <h3>Brands</h3>
          <div class="logos"> <a href="#"><img src="css/images/logo1.gif" alt="" /></a> <a href="#"><img src="css/images/logo2.gif" alt="" /></a> <a href="#"><img src="css/images/logo3.gif" alt="" /></a> <a href="#"><img src="css/images/logo4.gif" alt="" /></a> <a href="#"><img src="css/images/logo5.gif" alt="" /></a> </div>
        </div>
         -->
        <!-- Footer -->
        <div id="footer">
          <div class="left"> <a href="#">Home</a> <span>|</span> <a href="#">Support</a> <span>|</span> <a href="#">My Account</a> <span>|</span> <a href="#">The Store</a> <span>|</span> <a href="#">Contact</a> </div>
          <div class="right"> &copy; Nhom3catcon </div>
        </div>
        <!-- End Footer -->
      </div>
      <!-- End Container -->
    </div>
    <!-- End Content -->
  </div>
</div>
<!-- End Main -->
</body>
</html>
